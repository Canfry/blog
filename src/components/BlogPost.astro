---
const { url, title, excerpt, date } = Astro.props;
---

<a href={url}>
  <div
    class='max-w-[80%] md:max-w-[70%] lg:max-w-[60%] m-auto flex flex-col items-center justify-center shadow-md shadow-cyan-500 mt-8'
  >
    <!-- <div class='w-full h-[50%]'>
      <img
        src={cover_image}
        alt='Picture of a computer with code'
        class='rounded-md rounded-b-none'
      />
    </div> -->

    <div
      class='p-8 rounded-md rounded-t-none m-auto w-full flex flex-col items-start gap-4'
    >
      <h1 class='text-2xl uppercase font-bold text-gray-300'>
        {title}
      </h1>
      <p class='text-gray-400'>{date}</p>
      <p class='text-gray-300'>{excerpt}</p>
    </div>
  </div>
</a>
