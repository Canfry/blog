---
const { url, title, excerpt, date } = Astro.props;
---

<div
  class='max-w-[80%] md:max-w-[70%] lg:max-w-[60%] m-auto flex flex-col items-center justify-center shadow-md shadow-cyan-500 mt-12'
>
  <a href={url}>
    <div
      class='pt-4 pb-8 px-8 rounded-md rounded-t-none m-auto w-full flex flex-col items-start gap-4'
    >
      <h1 class='text-2xl uppercase font-bold text-white'>
        {title}
      </h1>
      <p class='text-gray-500 mt-[-15px]'>{date}</p>
      <p class='text-gray-300 font-thin'>{excerpt}</p>
    </div>
  </a>
</div>
