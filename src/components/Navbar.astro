---
import Hamburger from './Hamburger.astro';
import Close from './Close.astro';

import '../styles/global.css';
---

<header class='w-full bg-zinc-900 relative'>
  <div
    class='max-w-[90%] md:max-w-[70%] lg:max-w-[60%] m-auto py-4 flex justify-between items-center'
  >
    <div>
      <a class='text-cyan-500 text-2xl'>Fryblog</a>
    </div>
    <Hamburger />
    <nav class='nav'>
      <ul class='sm:flex sm:items-center sm:justify-between'>
        <!-- <li class='ml-8 hover:text-cyan-500 text-gray-400'> -->
        <li
          class={`ml-8 hover:text-cyan-500  ${
            Astro.url.pathname === '/'
              ? 'white border-b-4 border-cyan-500'
              : 'text-gray-400 border-none'
          } `}
        >
          <a href='/'>Home</a>
        </li>
        <li
          class={`ml-8 hover:text-cyan-500  ${
            Astro.url.pathname === '/blog'
              ? 'white border-b-4 border-cyan-500'
              : 'text-gray-400 border-none'
          } `}
        >
          <a href='/blog'>Blog</a>
        </li>
        <li
          class={`ml-8 hover:text-cyan-500  ${
            Astro.url.pathname === '/about'
              ? 'white border-b-4 border-cyan-500'
              : 'text-gray-400 border-none'
          } `}
        >
          <a href='/about'>About</a>
        </li>
      </ul>
    </nav>
  </div>
  <div class='menu'>
    <Close />
    <nav class='nav-menu'>
      <ul class='flex flex-col items-center justify-start gap-8 pr-8'>
        <!-- <li class='ml-8 hover:text-cyan-500 text-gray-400'> -->
        <li
          class={`ml-8 hover:text-cyan-500  ${
            Astro.url.pathname === '/'
              ? 'white border-b-4 border-cyan-500'
              : 'text-gray-400 border-none'
          } `}
        >
          <a href='/'>Home</a>
        </li>
        <li
          class={`ml-8 hover:text-cyan-500  ${
            Astro.url.pathname === '/blog'
              ? 'white border-b-4 border-cyan-500'
              : 'text-gray-400 border-none'
          } `}
        >
          <a href='/blog'>Blog</a>
        </li>
        <li
          class={`ml-8 hover:text-cyan-500  ${
            Astro.url.pathname === '/about'
              ? 'white border-b-4 border-cyan-500'
              : 'text-gray-400 border-none'
          } `}
        >
          <a href='/about'>About</a>
        </li>
      </ul>
    </nav>
  </div>
</header>
